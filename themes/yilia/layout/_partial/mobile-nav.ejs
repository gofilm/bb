<% var defaultBg = '#4d4d4d'; %>
<nav id="mobile-nav">
  	<div class="overlay js-overlay" style="background: <%= theme.style && theme.style.header ? theme.style.header : defaultBg %>"></div>
	<div class="btnctn js-mobile-btnctn">
  		<div class="slider-trigger list" q-on="click: openSlider(e)"><i class="icon icon-sort"></i></div>
	</div>
	<div class="intrude-less">
		<header id="header" class="inner">
			<div class="profilepic">
				<img src="<%=theme.avatar%>" class="js-avatar">
			</div>
			<hgroup>
			  <h1 class="header-author js-header-author"><%=theme.author%></h1>
			</hgroup>
			<% if (theme.subtitle){ %>
			<p class="header-subtitle"><i class="icon icon-quo-left"></i><%=theme.subtitle%><i class="icon icon-quo-right"></i></p>
			<% } %>
			<% var count = 0%>
			<% for (var i in theme.menu){ %>
				<% count++ %>
			<% } %>
			<% var ulWidth = count > 2 ? '70%' : '50%' %>
			
			<nav class="header-nav">
				<div class="social">
					<% for (var i in theme.subnav){ %>
						<% if(i == 'qq') {%>
						<a class="<%= i %> tooltip-top" target="_blank" href="<%- url_for(theme.subnav[i].mobile) %>" title="<%= theme.subnav[i].title %>">
						<% } else { %>
				        <a class="<%= i %> tooltip-top" target="_blank" href="<%- url_for(theme.subnav[i].link) %>" title="<%= theme.subnav[i].title %>">
				        <% } %>
						<% if(i == 'weixin') {%>
						<div class="tooltip">
							<i class="icon-<%= i %>"></i>
							<span class="tooltip-content" style="padding-bottom: 25px;width: 160px;left: -70px;margin-left: 0;">
				              <span class="tooltip-text">
				                <span class="tooltip-inner" style="padding: 10px;background: #87e1ff">
				                  <div class="reward-box">
				                    <div class="reward-box-item">
				                      <img class="reward-img" style="width: 150px;height: 150px" src="<%= theme.subnav[i].qrcode%>">
				                    </div>
				                  </div>
				                </span>
				              </span>
				            </span>
				        </div>
				        <% } else { %>
				        <i class="icon-<%= i %>"></i>
				        <% } %>
						</a>
			        <%}%>
				</div>
			</nav>

			<nav class="header-menu js-header-menu">
				<ul style="width: <%= ulWidth %>">
				<% var divide = 100 / count + '%' %>
				<% for (var i in theme.menu){ %>
					<li style="width: <%= divide %>"><a href="<%- url_for(theme.menu[i]) %>"><%= i %></a></li>
		        <%}%>
				</ul>
			</nav>
		</header>				
	</div>
	<div class="mobile-mask" style="display:none" q-show="isShow"></div>
</nav>
